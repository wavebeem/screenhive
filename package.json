{
  "private": true,
  "scripts": {
    "postinstall": "install-app-deps",
    "make:js": "echo TODO",
    "prettify": "prettier --write 'app/src/**/*.js' app/style.css",
    "prestart": "npm run -s prettify && npm run -s make:js",
    "start": "electron app",
    "pack": "build --dir",
    "preico": "npm run -s scale-icons",
    "preicns": "npm run -s scale-icons",
    "scale-icons": "node ./_scripts/scale-icons.js",
    "ico": "convert img/win-*px.png build/icon.ico",
    "icns": "./_scripts/make-iconset.rb",
    "dist:mac": "build --mac",
    "dist:win": "build --win"
  },
  "build": {
    "appId": "com.mockbrian.Screenhive",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true
    }
  },
  "devDependencies": {
    "electron": "1.8.1",
    "electron-builder": "^6.7.3",
    "eslint": "^3.19.0",
    "prettier": "1.9.2"
  }
}
